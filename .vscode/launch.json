    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "node2",
            "request": "launch",
            "program": "${workspaceRoot}/server/index.js",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "server",
                "NODE_PATH": "server"
            }
        },
        {
            "name": "Attach to Process",
            "type": "node2",
            "request": "attach",
            "port": 9229
        }
    ]
}